@page
@model MegaDeskRazorPages.Pages.MegaDeskRazor.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>MegaDesk</h2>

<h4>Add New Quote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MegaDesk.WidthDesk" class="control-label"></label>
                <input asp-for="MegaDesk.WidthDesk" class="form-control" />
                <span asp-validation-for="MegaDesk.WidthDesk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MegaDesk.DepthDesk" class="control-label"></label>
                <input asp-for="MegaDesk.DepthDesk" class="form-control" />
                <span asp-validation-for="MegaDesk.DepthDesk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MegaDesk.Drawers" class="control-label"></label>
                <select asp-for="MegaDesk.Drawers" class="form-control">
                    <option value=0>0</option>
                    <option value=1>1</option>
                    <option value=2>2</option>
                    <option value=3>3</option>
                    <option value=4>4</option>
                    <option value=5>5</option>
                    <option value=6>6</option>
                    <option value=7>7</option>
                </select>
                <span asp-validation-for="MegaDesk.Drawers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MegaDesk.Material" class="control-label"></label>
                <select asp-for="MegaDesk.Material" class="form-control">
                    <option value="Oak">Oak</option>
                    <option value="Laminate">Laminate</option>
                    <option value="Pine">Pine</option>
                    <option value="Rosewood">Rosewood</option>
                    <option value="Veneer">Veneer</option>
                </select>
                <span asp-validation-for="MegaDesk.Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MegaDesk.CustomerName" class="control-label"></label>
                <input asp-for="MegaDesk.CustomerName" class="form-control" />
                <span asp-validation-for="MegaDesk.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MegaDesk.RushDays" class="control-label"></label>
                <select asp-for="MegaDesk.RushDays" class="form-control">
                    <option value="standard">Standard (14 days)</option>
                    <option value="3 Days">3 Days</option>
                    <option value="5 Days">5 Days</option>
                    <option value="7 Days">7 Days</option>
                </select>
                <span asp-validation-for="MegaDesk.RushDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MegaDesk.QuoteDate" class="control-label"></label>
                <input asp-for="MegaDesk.QuoteDate" class="form-control" />
                <span asp-validation-for="MegaDesk.QuoteDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
